# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]

indent_style = space

end_of_line = lf

charset = utf-8

trim_trailing_whitespace = true

insert_final_newline = true

[*.html]

indent_size = 2

[*.md]

trim_trailing_whitespace = false

[*.php]

indent_size = 4

[*.xml]

indent_size = 4

[*.py]

indent_size = 4

[Makefile]

indent_style = tab

[{package.json,.travis.yml,.khsci.yml,.drone.yml}]

indent_size = 2
